<template name="tabBar">
<view class="tabBar">
  <navigator class="home-publish" url="/pages/issue/issue">
      <image src="../../assets/tabarImages/public.png"></image>
    </navigator>
  <block wx:for="{{tabBar}}" wx:for-item="item" wx:key="tabBar">
    <view class="tabBar-item">
      <navigator open-type="redirect" url="{{item.pagePath}}">
        <view><image class="icon" src='{{item.iconPath}}'></image></view>
        <view class="{{item.current== 1 ? 'tabBartext' :''}}">{{item.text}}</view>
      </navigator>  
    </view>
  </block>
</view>
</template>