.order-item {
  color: #707070;
  padding: 20rpx 35rpx;
  margin: 20rpx 0;
  background-color: #ffffff;
}
.order-item .user-info {
  display: flex;
  white-space: nowrap;
  align-items: center;
}
.order-item .user-info .user-avator image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}
.order-item .user-info .user-name {
  font-size: 30rpx;
  margin: 0 40rpx;
}
.order-item .user-info .user-createTime {
  font-size: 22rpx;
  color: #BBBBBB;
}
.order-item .order-info {
  color: #707070;
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}
.order-item .order-info .content-content {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
  line-height: 45rpx;
  flex: 7;
}
.order-item .order-info .order-price {
  color: #FCA44B;
  text-align: right;
  flex: 1;
}
.order-item .order-info .order-price image {
  position: relative;
  width: 40rpx;
  height: 40rpx;
  top: 8rpx;
}
.order-item .order-request {
  display: flex;
  white-space: nowrap;
  font-size: 28rpx;
}
.order-item .order-request .order-route {
  color: #666666;
  flex: 6;
}
.order-item .order-request .order-requestTime {
  color: #5A8857;
  flex: 3;
}
.order-item .order-request .order-toChat {
  flex: 1;
  text-align: right;
  top: 6rpx;
}
.order-item .order-request .order-toChat image {
  width: 40rpx;
  height: 40rpx;
}
