<view class="login">
  <view class="login_container">
    <text class="login_txt">Log In</text>
  </view>
  <view class="input_container">
    <view class="sno">
      <text class="{{ snoIsFoucs ? 'sno_txt float' : 'sno_txt' }}">学号</text>
      <input class="sno_input" bindfocus="snoFoucs" bindblur="snoBlur"></input>
    </view>
    <view class="pwd_container">
      <text class="{{ pwdIsFoucs ? 'pwd_txt float' : 'pwd_txt' }}">密码</text>
      <input type="{{ showPwd ? 'text' : 'password' }}" class="pwd_input" bindfocus="pwdFoucs" bindblur="pwdBlur" bindinput="inputPwd"></input>
      <image wx:if="{{ user.pwd }}" src="{{ showPwd ? showImg : hiddenImg }}" bindtap="showHidden"></image>
    </view>
    <view class="code_container">
      <view class="code">
        <text class="{{ codeIsFoucs ? 'code_txt float' : 'code_txt' }}">验证码</text>
        <input class="code_input" bindfocus="codeFoucs" bindblur="codeBlur"></input>
      </view>
      <image class="code_img" src="{{ codeImg }}" bindtap="updateCode"></image>
    </view>
    <button bindtap="jxfwLogin" open-type="getUserInfo" bindgetuserinfo="getUserInfo">登录</button>
  </view>
</view>
