} */

/* 评价弹窗 */
.chat .comment_container .comment .comment_content .comment_detail {
  margin: 30rpx 36rpx;
  background-color: rgb(255, 231, 207, 0.3);
  border-radius: 4rpx;
  padding: 16rpx;
  color: #666666;
  font: 28rpx PingFangSC-Regular;
  line-height: 46rpx;
}


/* 确认订单弹窗 */
.chat .accept_container .accept {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #FFFFFF;
  border-top: 12rpx solid #F7CBAE;
  border-radius: 44rpx;
  width: 672rpx;
  color: #555555;
  font: 32rpx Source Han Sans CN;
}
.chat .accept_container .accept view {
  margin: 40rpx 30rpx;
}
.chat .accept_container .accept .accept_content {
  background-color: #FFF8F1;
  border-radius: 16rpx;
  height: 204rpx;
  overflow: auto;
  padding: 14rpx 22rpx;
}
.chat .accept_container .accept .accept_operate {
  display: flex;
  justify-content: space-around;
  margin-top: 100rpx;
}
.chat .accept_container .accept .accept_operate button {
  width: 206rpx;
  height: 76rpx;
  border-style: none;
  border-radius: 66rpx;
  background-color: #FCC39E;
  color: #FFFFFF;
  font: 36rpx PingFangSC-Regular;
  line-height: 76rpx;
}