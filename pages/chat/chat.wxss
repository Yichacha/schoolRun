/* 输入框和发送按钮 */
.chat .edit_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
  color: #999999;
  padding: 0 30rpx;
  border-top: 2rpx solid #EFEFEF;
}
.chat .edit_container .edit {
  width: 560rpx;
  height: 76rpx;
  background-color: #F5F5F5;
  border-radius: 52rpx;
  font: 28rpx PingFangSC-Regular;
  line-height: 56rpx;
  padding-left: 32rpx;
}
.chat .edit_container .send {
  font: 30rpx PingFangSC-Regular;
  line-height: 56rpx;
}