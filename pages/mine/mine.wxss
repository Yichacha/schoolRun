page {
  background-color: #fff8f1;
}
.mine {
  width: 100%;
  color: #707070;
}
.mine .user-info {
  height: 320rpx;
  text-align: center;
}
.mine .user-info .user-avator {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin: 70rpx 0 20rpx;
}
.mine .user-info .user-name {
  font-size: 30rpx;
}
.mine .mine-order-info {
  width: 100%;
  padding-top: 40rpx;
  background-color: #fff;
  border-radius: 36rpx 36rpx 0 0;
  box-shadow: 0 -2rpx 15rpx rgba(165, 160, 160, 0.5);
  position: fixed;
  top: 320rpx;
}
.mine .mine-order-info .my-order {
  height: 650rpx;
  padding-bottom: 50rpx;
  box-sizing: border-box;
  overflow: auto;
}
.mine .mine-order-info .my-order .order-view {
  border: 1rpx solid #F2F2F2;
}
.mine .mine-order-info .comment-list {
  height: 620rpx;
  overflow: auto;
  padding-bottom: 50rpx;
}
.mine .mine-order-info .comment-list .comment-item {
  font-size: 30rpx;
  padding: 24rpx;
  box-sizing: border-box;
  border: 1rpx solid #E4E4E4;
}
.mine .mine-order-info .comment-list .comment-item .user {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}
.mine .mine-order-info .comment-list .comment-item .user image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}
.mine .mine-order-info .comment-list .comment-item .user .user-name {
  flex: 5;
}
.mine .mine-order-info .comment-list .comment-item .user .comment-date {
  color: #BBBBBB;
  font-size: 22rpx;
  flex: 1;
}
