.mine {
  width: 100%;
  color: #707070;
}
.mine .user-info {
  height: 320rpx;
  text-align: center;
}
.mine .user-info .user-avator {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin: 70rpx 0 20rpx;
}
.mine .user-info .user-name {
  font-size: 30rpx;
}
.mine .mine-order-info {
  width: 100%;
  padding-top: 20rpx;
  background-color: #fff;
  border-radius: 36rpx 36rpx 0 0;
  box-shadow: 0 -2rpx 15rpx rgba(165, 160, 160, 0.5);
}
.mine .mine-order-info .my-order {
  padding-bottom: 100rpx;
  box-sizing: border-box;
}
.mine .mine-order-info .my-order .order-view {
  border: 1rpx solid #F2F2F2;
}
.mine .mine-order-info .comment-list {
  padding-bottom: 100rpx;
}
.mine van-overlay van-transition view {
  background-color: rgba(0, 0, 0, 0);
}
.mine .shadow {
  position: absolute;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.3);
}
.mine .wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}
.mine .block {
  position: relative;
  width: 670rpx;
  height: 550rpx;
  border-radius: 44rpx;
  border-top: 8rpx solid #F7CBAE;
  background-color: #fff;
  padding: 40rpx 0;
  box-sizing: border-box;
}
.mine .block .closeIcon {
  width: 72rpx;
  height: 72rpx;
  position: absolute;
  right: 0;
  top: -108rpx;
}
.mine .block .closeIcon::before {
  content: "";
  position: absolute;
  display: inline-block;
  width: 2rpx;
  height: 36rpx;
  background-color: #e7e5e4;
  top: 100%;
  left: 50%;
  transform: translate(-50%, 0);
}
.mine .block .closeIcon image {
  width: 100%;
  height: 100%;
  opacity: 1;
}
.mine .block .order-start-time {
  margin: 38rpx 0 70rpx 38rpx;
  color: #666;
  font-size: 28rpx;
}
.mine .block .order-start-time text {
  margin-left: 18rpx;
}
.mine .block .to-comment {
  position: absolute;
  display: inline-block;
  font-size: 28rpx;
  padding: 18rpx 70rpx;
  background-color: #FCC39E;
  color: #fff;
  border-radius: 38rpx;
  right: 68rpx;
  bottom: 40rpx;
}
.mine .block .comment-input {
  margin: 36rpx 34rpx;
  font-size: 30rpx;
  height: 250rpx;
  color: #999999;
}
