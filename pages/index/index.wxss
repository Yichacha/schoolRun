.home {
  width: 100%;
  background-color: #f5f5f5;
}
.home .home-head {
  width: 100%;
  height: 120rpx;
  background-color: #ffffff;
}
.home .home-head .van-col {
  margin-top: 14rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.home .home-head .van-col van-overlay van-transition view {
  top: 120rpx;
  background-color: rgba(0, 0, 0, 0.2);
}
.home .home-head .van-col .wrapper .sort-menu {
  position: fixed;
  top: 100rpx;
  left: 24rpx;
  width: 218rpx;
  background-color: #ffffff;
  padding: 30rpx 28rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  box-shadow: #ccc 0px 0px 1px;
}
.home .home-head .van-col .wrapper .sort-menu ::before,
.home .home-head .van-col .wrapper .sort-menu ::after {
  border: solid transparent;
  content: ' ';
  height: 0;
  top: -48rpx;
  position: absolute;
  width: 0;
  left: 10px;
}
.home .home-head .van-col .wrapper .sort-menu ::before {
  border-width: 10px;
  border-bottom-color: #fcfcfc;
  top: -42rpx;
}
.home .home-head .van-col .wrapper .sort-menu ::after {
  border-width: 10px;
  border-bottom-color: #fff;
  top: -41rpx;
}
.home .home-head .van-col .wrapper .sort-menu .sort-item {
  background-color: #ffffff;
  color: #666666;
  font-size: 30rpx;
  line-height: 70rpx;
  height: 70rpx;
  letter-spacing: 5rpx;
}
.home .home-head .van-col .van-search {
  width: 550rpx;
}
.home .home-orderList .order-item {
  color: #707070;
  padding: 20rpx 35rpx;
  margin: 20rpx 0;
  background-color: #ffffff;
}
.home .home-orderList .order-item .user-info {
  display: flex;
  white-space: nowrap;
  align-items: center;
}
.home .home-orderList .order-item .user-info .user-avator image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}
.home .home-orderList .order-item .user-info .user-name {
  font-size: 30rpx;
  margin: 0 40rpx;
}
.home .home-orderList .order-item .user-info .user-createTime {
  font-size: 22rpx;
  color: #BBBBBB;
}
.home .home-orderList .order-item .order-info {
  color: #707070;
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}
.home .home-orderList .order-item .order-info .content-content {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
  line-height: 45rpx;
  flex: 7;
}
.home .home-orderList .order-item .order-info .order-price {
  color: #FCA44B;
  text-align: right;
  flex: 1;
}
.home .home-orderList .order-item .order-info .order-price image {
  position: relative;
  width: 40rpx;
  height: 40rpx;
  top: 8rpx;
}
.home .home-orderList .order-item .order-request {
  display: flex;
  white-space: nowrap;
  font-size: 28rpx;
}
.home .home-orderList .order-item .order-request .order-route {
  color: #666666;
  flex: 6;
}
.home .home-orderList .order-item .order-request .order-requestTime {
  color: #5A8857;
  flex: 3;
}
.home .home-orderList .order-item .order-request .order-toChat {
  flex: 1;
  text-align: right;
  top: 6rpx;
}
.home .home-orderList .order-item .order-request .order-toChat image {
  width: 40rpx;
  height: 40rpx;
}
